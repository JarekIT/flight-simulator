{
  "name": "flight-tracking-monitor",
  "version": "0.0.1",
  "author": "JarekIT",
  "private": true,
  "scripts": {
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "run": "concurrently \"npm run server\" \"npm run client\"",
    "installServer": "cd backend && npm install",
    "installClient": "cd frontend && npm install",
    "installAll": "concurrently \"npm run installServer\" \"npm run installClient\""
  },
  "devDependencies": {
    "concurrently": "^6.0.1"
  }
}
