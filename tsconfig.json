{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./backend/",
    "incremental": true,
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
    "include": [
    "backend/src/**/*.ts",
    "backend/test/**/*.ts",
  ]
}